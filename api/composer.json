{
  "name": "klev/demo-auction",
  "type": "project",
  "license": "BSD-3-Clause",
  "config": {
    "process-timeout": 0,
    "sort-packages": true,
    "allow-plugins": {
      "composer/package-versions-deprecated": true
    }
  },
  "require": {
    "php": "^7.4",
    "ext-json": "^7.4",
    "php-di/php-di": "^6.3",
    "slim/psr7": "^1.3",
    "slim/slim": "^4.7",
    "symfony/console": "^5.4"
  },
  "require-dev": {
    "overtrue/phplint": "^3.0",
    "phpunit/phpunit": "^9.5",
    "roave/security-advisories": "dev-master",
    "squizlabs/php_codesniffer": "^3.6",
    "vimeo/psalm": "^4.18"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "tests/"
    }
  },
  "scripts": {
    "app": "php bin/app.php --ansi",
    "lint": "find bin config public src -name \"*.php\" -print0 | xargs -0 -n1 php -l",
    "lint2": "phplint",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "psalm": "psalm",
    "test": "phpunit --colors=always",
    "test-unit-coverage": "phpunit --colors=always --testsuite=unit --coverage-html var/coverage"
  }
}
